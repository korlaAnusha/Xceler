<%= form_for(interest) do |f| %>
  <% if interest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(interest.errors.count, "error") %> prohibited this interest from being saved:</h2>

      <ul>
      <% interest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :topic %>
    <%= f.select :topic, options_for_select(Interest::TOPICS.map{|topic| [topic, topic]}, @interest.topic),{include_blank: "Select Topic", class: "select-topic"}%>
    <%= f.text_field :other_topic, class: "text-topic"%>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
