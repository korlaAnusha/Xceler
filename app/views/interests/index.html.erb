<p id="notice"><%= notice %></p>

<h1>Topics Of Interests</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <%if interest.topic == "Other" %>
          <td><%= interest.other_topic %></td>
        <%else%>
          <td><%= interest.topic %></td>
        <%end%>
        <td><%= interest.description %></td>
        <td><%= link_to 'Show', interest %></td>
        <td><%= link_to 'Edit', edit_interest_path(interest) %></td>
        <td><%= link_to 'Destroy', interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Topic of Interest', new_interest_path %>
